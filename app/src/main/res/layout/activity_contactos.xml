<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradado"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25px"
                android:background="#000000"
                android:text="Envianos tu mensaje"
                android:textColor="#FFFFFF"
                android:textSize="25dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/LinearLayout02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="25px">


                <TextView
                    android:id="@+id/txtForEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12px"
                    android:text="Destinatario"
                    android:textColor="@color/black"></TextView>

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12px"
                    android:width="170dip"
                    android:background="@drawable/estilos"
                    android:inputType="textEmailAddress"
                    android:outlineAmbientShadowColor="#8C2A2A"
                    android:outlineSpotShadowColor="#530B0B"
                    android:shadowColor="#B11616"></EditText>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="25px">

                <TextView
                    android:id="@+id/txtForSubject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12px"
                    android:text="Asunto"
                    android:textColor="@color/black"></TextView>

                <EditText
                    android:id="@+id/etSubject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100px"
                    android:width="170dip"
                    android:background="@drawable/estilos"></EditText>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="25px">

                <TextView
                    android:id="@+id/txtForBody"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12px"
                    android:text="Mensaje"
                    android:textColor="@color/black"></TextView>

                <EditText
                    android:id="@+id/etBody"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80px"
                    android:width="300dip"
                    android:background="@drawable/estilos"
                    android:lines="5"
                    android:shadowColor="#830B0B"></EditText>

            </LinearLayout>

            <CheckBox
                android:id="@+id/chkAttachment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="25px"
                android:text="Enviar ícono adjunto"
                android:textColor="@color/black"></CheckBox>

            <Button
                android:id="@+id/btnEnviar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="150dip"
                android:background="@drawable/estilos"
                android:imeOptions="actionSend"
                android:paddingBottom="10px"
                android:text="Enviar"
                android:textColor="@color/white"

                app:backgroundTint="#040000"></Button>

            <Space
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:background="#E41F1F" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5px"
                android:background="@drawable/estiloscontac"
                android:backgroundTint="@color/black"
                android:text="UBICANOS"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:textStyle="bold" />
        <LinearLayout
            android:layout_marginTop="12px"
            android:layout_marginBottom="12px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/estilos"
            android:backgroundTint="@color/black">


            <fragment
                android:id="@+id/map"

                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="5dp"
                tools:context=".ui.contactos.MapsFragment" />
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="25px"
                        android:background="@drawable/estiloscontac"
                        android:backgroundTint="@color/black"
                        android:text="INFORMACIÓN"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/estiloscontac"
                    android:text="Horario de atención: 24/7"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/estiloscontac"
                    android:paddingBottom="12px"
                    android:text="Telefono: 022366649"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/textView4"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/estiloscontac"
                    android:text="Email: proyectowebapp2021@gmail.com"
                    android:textColor="#000000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="25px"
                        android:background="@drawable/estiloscontac"
                        android:backgroundTint="@color/black"
                        android:text="NUESTRAS REDES SOCIALES"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/boton"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_baseline_facebook_24"
                        app:backgroundTint="@color/black" />

                    <Button
                        android:layout_marginTop="12dp"
                        android:id="@+id/boton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_twitter"
                        app:backgroundTint="#000000" />
                    <Button
                        android:layout_marginTop="12dp"
                        android:id="@+id/boton3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_instagram"
                        app:backgroundTint="#000000" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <![CDATA[

    />


]]>
</LinearLayout>





